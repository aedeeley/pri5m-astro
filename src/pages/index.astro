<style>
  .fade-bg {
    background: linear-gradient(
      90deg,
      #5fbb4620 0%,
      #3291d020 33.33%,
      #e1389520 64.58%,
      #f7951e20 100%
    );
  }

  #industry-list .fa-caret-right {
    font-size: 7pt;
    vertical-align: middle;
  }

  .mockup-browser .mockup-browser-toolbar .input {
    background-color: rgba(0, 0, 0, 0.1) !important;
  }
</style>

<script>
  var scrollPosition = window.scrollY
  var navBG = document.getElementsByClassName('hero-video')[0]
  window.addEventListener('scroll', function () {
    scrollPosition = window.scrollY

    if (scrollPosition >= 100) {
      navBG.classList.add('max-w-full')
    } else {
      navBG.classList.remove('max-w-full')
    }
  })

  import { reset, run } from 'vanilla-cookieconsent'
  import { config } from 'src/components/CookiesConsentConfig'

  const resetBtn = document.getElementById('reset-btn')
  const toggleThemeBtb = document.getElementById('toggle-theme-btn')

  resetBtn?.addEventListener('click', () => {
    reset(true)
    run(config)
  })

  toggleThemeBtb?.addEventListener('click', () => {
    document.body.classList.toggle('cc--elegant-black')
  })
</script>

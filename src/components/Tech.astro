---
import { Image } from 'astro:assets'
import nodejs from '../assets/brands/nodejs.svg'
import react from '../assets/brands/react.svg'
import elixir from '../assets/brands/elixir.svg'
import vue from '../assets/brands/vue.svg'
import tailwind from '../assets/brands/tailwind.svg'
import laravel from '../assets/brands/laravel.svg'
import strapi from '../assets/brands/strapi.svg'
import graphql from '../assets/brands/graphql.svg'
---

<ul
  id="tech"
  role="list"
  class="grid auto-rows-fr grid-cols-2 md:grid-cols-3 lg:grid-cols-4 text-center"
>
  <li>
    <div>
      <span><Image src={nodejs} alt="" /></span>
      <p class="mt-5 font-semibold text-zinc-900">Node.js</p>
    </div>
  </li>
  <li>
    <div>
      <span><Image src={elixir} alt="" /></span>
      <p class="mt-5 font-semibold text-zinc-900">Elixir</p>
    </div>
  </li>
  <li>
    <div>
      <span><Image src={react} alt="" /></span>
      <p class="mt-5 font-semibold text-zinc-900">React</p>
    </div>
  </li>
  <li>
    <div>
      <span><Image src={vue} alt="" /></span>
      <p class="mt-5 font-semibold text-zinc-900">Vue</p>
    </div>
  </li>
  <li>
    <div>
      <span><Image src={tailwind} alt="" /></span>
      <p class="mt-5 font-semibold text-zinc-900">Tailwind</p>
    </div>
  </li>
  <li>
    <div>
      <span><Image src={laravel} alt="" /></span>
      <p class="mt-5 font-semibold text-zinc-900">Laravel</p>
    </div>
  </li>
  <li>
    <div>
      <span><Image src={strapi} alt="" /></span>
      <p class="mt-5 font-semibold text-zinc-900">Strapi</p>
    </div>
  </li>
  <li>
    <div>
      <span> <Image src={graphql} alt="" /></span>
      <p class="mt-5 font-semibold text-zinc-900">GraphQL</p>
    </div>
  </li>
</ul>

<style>
  #tech li {
    margin-bottom:40px;
  }
  #tech li span img {
    height: 30px;
    width: auto;
  margin:0 auto;
}
</style>

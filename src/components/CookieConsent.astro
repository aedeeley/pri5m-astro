---
import 'vanilla-cookieconsent/dist/cookieconsent.css';
import '../styles/ccElegantBlack.css';
---
<button type="button" data-cc="show-preferencesModal">Cookie preferences</button>

<script>
    import { run } from 'vanilla-cookieconsent';
    import { config } from 'src/components/CookiesConsentConfig';

    // toggle custom black theme
    document.body.classList.add('cc--elegant-black');

    run(config);
</script>